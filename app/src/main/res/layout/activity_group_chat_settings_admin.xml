<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.OneToOneSettingsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/background_gradient"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:tint="#FFFFFF"
                android:src="@drawable/left_arrow_icon"/>
            <TextView
                android:id="@+id/admin_settings_title_chat_name_text_view"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/arial_regular"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:text="Nerine 951"/>
        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat information"
                    android:textColor="#2C2C2C"
                    android:fontFamily="@font/arial_regular"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"/>
                <LinearLayout
                    android:id="@+id/admin_settings_chat_info_chat_name_linear_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/round_orange"
                            android:src="@drawable/chat_icon"
                            android:tint="#FFFFFF"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/admin_settings_chat_info_chat_name_text_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/avenir_book"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:textColor="#424242"
                        android:text="Saga 363"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical|end"
                        android:src="@drawable/right_arrow_icon" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D9D9D9"/>

                <LinearLayout
                    android:id="@+id/admin_settings_chat_info_nickname_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/round_orange"
                            android:padding="8dp"
                            android:src="@drawable/edit_icon"
                            android:tint="#FFFFFF" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/admin_settings_chat_info_nickname_text_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/avenir_book"
                        android:gravity="center_vertical"
                        android:text="Saga 363"
                        android:textColor="#424242"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical|end"
                        android:src="@drawable/right_arrow_icon" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D9D9D9"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/round_orange"
                            android:src="@drawable/tutorial_icon_3"
                            android:tint="#FFFFFF"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/avenir_book"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:textColor="#424242"
                        android:text="Secret Chat"/>
                    <com.suke.widget.SwitchButton
                        android:id="@+id/admin_settings_chat_info_is_private_switch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:sb_checked_color="#FF752B"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Burner Code"
                    android:textColor="#2C2C2C"
                    android:fontFamily="@font/arial_regular"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/round_orange"
                            android:src="@drawable/burner_code_icon"
                            android:tint="#FFFFFF"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/avenir_book"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:textColor="#424242"
                        android:text="Burner Code status"/>
                    <com.suke.widget.SwitchButton
                        android:id="@+id/admin_settings_is_burner_code_enabled_switch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:sb_checked_color="#FF752B"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/admin_settings_share_burner_code_linear_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="8dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:background="@drawable/round_orange"
                            android:src="@drawable/ic_share_white_24dp"
                            android:tint="#FFFFFF"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/avenir_book"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:textColor="#424242"
                        android:text="Share Burner Code"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/admin_settings_edit_text_1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/admin_settings_edit_text_2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/admin_settings_edit_text_3"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/admin_settings_edit_text_4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/admin_settings_edit_text_5"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:enabled="false"
                        android:background="@drawable/colored_border_orange"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group participants"
                android:textColor="#2C2C2C"
                android:fontFamily="@font/arial_regular"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:textSize="24sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/admin_settings_first_subscriber_name_text_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/avenir_book"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="#424242"
                    android:text="Saga 363"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#D9D9D9"/>

            <LinearLayout
                android:id="@+id/admin_settings_second_subscriber_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/admin_settings_second_subscriber_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_book"
                    android:gravity="center_vertical"
                    android:text="Saga 363"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <View
                android:id="@+id/admin_settings_second_subscriber_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#D9D9D9"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/admin_settings_third_subscriber_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/admin_settings_third_subscriber_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_book"
                    android:gravity="center_vertical"
                    android:text="Saga 363"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <View
                android:id="@+id/admin_settings_third_subscriber_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#D9D9D9"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/admin_settings_more_subscriber_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/admin_settings_more_subscriber_count_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_book"
                    android:gravity="center_vertical"
                    android:text="Saga 363"
                    android:textColor="#424242"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:rotation="90"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/arial_regular"
                    android:text="Group chatDB content"
                    android:textColor="#2C2C2C"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/admin_settings_clear_your_content_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear your chatDB content"
                    android:textColor="#424242"
                    android:fontFamily="@font/avenir_book"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D9D9D9"/>

                <TextView
                    android:id="@+id/admin_settings_clear_all_content_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear all chatDB content"
                    android:textColor="#FE2D2D"
                    android:fontFamily="@font/avenir_book"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D9D9D9"/>

                <TextView
                    android:id="@+id/admin_settings_leave_group_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/avenir_book"
                    android:text="Delete chatDB &amp; disconnect"
                    android:textColor="#FE2D2D"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#D9D9D9"/>

                <TextView
                    android:id="@+id/admin_settings_block_report_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/avenir_book"
                    android:paddingBottom="8dp"
                    android:text="Block &amp; Report"
                    android:textColor="#FE2D2D"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

