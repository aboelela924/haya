<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_reveal_layout"
    app:mode="same_level"
    app:dragEdge="right"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/delete_room_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FF0000"
            android:layout_gravity="center_vertical"
            android:text="Delete"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/chat_type_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_orange"
                    android:padding="8dp"
                    android:src="@drawable/burner_code_icon"
                    android:scaleType="centerCrop"
                    android:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/chat_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_book"
                    android:textSize="14sp"
                    android:paddingEnd="8dp"
                    android:gravity="center_vertical"
                    android:textColor="#424242"
                    android:text="Hydrangeas 666"/>

                <TextView
                    android:id="@+id/chat_burner_code_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_book"
                    android:textSize="16sp"
                    android:paddingEnd="8dp"
                    android:gravity="center_vertical"
                    android:textColor="#424242"
                    android:textAllCaps="true"
                    android:text="catf1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/burner_code_creat_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="21/07/2019"
                android:fontFamily="@font/arial_regular"
                android:textColor="#000000"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
