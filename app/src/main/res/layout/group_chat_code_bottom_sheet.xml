<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_chat_bottom_cheat"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/round_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textAlignment="center"
                    android:text="Burner Code has been created successfully! You can start chatDB now!"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">
                    <EditText
                        android:id="@+id/group_chat_bottom_sheet_edit_text_1"
                        android:tag="0"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:maxLength="1"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/group_chat_bottom_sheet_edit_text_2"
                        android:tag="1"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:maxLength="1"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/group_chat_bottom_sheet_edit_text_3"
                        android:tag="2"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:maxLength="1"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/group_chat_bottom_sheet_edit_text_4"
                        android:tag="3"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:maxLength="1"
                        android:background="@drawable/colored_border_orange"/>
                    <EditText
                        android:id="@+id/group_chat_bottom_sheet_edit_text_5"
                        android:tag="4"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLength="1"
                        android:background="@drawable/colored_border_orange"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/arial_regular"
                    android:text="Conversation Name:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/group_bottom_sheet_conversation_name_edit_text"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:background="@drawable/colored_border_orange"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/nickname_edit_group_bottom_sheet_image_view"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:src="@drawable/edit_icon"
                        android:clickable="false"
                        android:background="#FF7A2F"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/arial_regular"
                    android:text="Nickname:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/group_bottom_sheet_nickname_edit_text"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:background="@drawable/colored_border_orange"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/chat_name_edit_group_bottom_sheet_image_view"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:src="@drawable/edit_icon"
                        android:clickable="false"
                        android:background="#FF7A2F"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/group_share_card_view"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_share_white_24dp"
                            android:background="#FF7A2F"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:enabled="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/avenir_book"
                            android:text="Share it with a contact"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/group_show_card_view"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:src="@drawable/show_icon"
                            android:background="#FF7A2F"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:enabled="false"
                            android:fontFamily="@font/avenir_book"
                            android:text="Show it to someone"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/group_copy_card_view"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/copy_icon"
                            android:background="#FF7A2F"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="#424242"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/avenir_book"
                            android:text="Copy it to clipboard"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <Button
                android:id="@+id/close_group_chat_bottom_cheat_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round_white"
                android:text="Close"></Button>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
